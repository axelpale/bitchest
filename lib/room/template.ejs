<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title><%= opts.roomWord %> <%= roomId %></title>

  <link rel="icon" type="image/png" href="/static/favicon.png">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

</head>
<body>
  <div class="container">
    <nav class="row mt-3">
      <div class="col">
        <img src="/static/favicon32.png"> <a href="/"><%= opts.title %></a>
      </div>
    </nav>

    <div class="row mt-2">
      <div class="col">
        <h1><%= opts.roomWord %> "<%= roomId %>"</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="card">
          <form enctype="multipart/form-data" method="post" class="card-body">
              <div class="form-group">
                <label for="files-input">Choose files to upload</label>
                <input id="files-input" name="files" type="file" multiple="multiple" class="form-control-file">
                <small>Max <%= (opts.maxFileSize / (1024 * 1024)).toFixed(1) %> MiB</small>
              </div>
              <input type="submit" value="Upload" class="btn btn-outline-primary">
          </form>
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col">
      <% if (files.length === 0) { %>
        <p>No files uploaded yet.</p>
      <% } else { %>
        <ul class="list-group">
        <% files.forEach((file, index) => { %>
          <li class="list-group-item"><a href="<%= file %>"><%= file %></a></li>
        <% }) %>
        </ul>

        <form action="clear" method="post" class="mt-3">
          <input type="submit" value="Remove all" class="btn btn-danger">
        </form>
      <% } %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col" style="text-align: right; opacity: 0.5">
        <% if (opts.poweredBy) { %>
        Powered by <a href="<%= homeUrl %>">Bit Chest</a>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
